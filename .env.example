# ZCOP Platform Environment Configuration

# Application Settings
NODE_ENV=production
PORT=3000
HOST=localhost

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=zcop_user
DB_PASSWORD=your_secure_db_password
DB_NAME=zcop_db

# Neo4j Configuration
NEO4J_SCHEME=bolt
NEO4J_HOST=localhost
NEO4J_PORT=7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_TTL=86400

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6334
QDRANT_API_KEY=your_qdrant_api_key

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,https://yourdomain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_POINTS=100
RATE_LIMIT_DURATION=60

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# External AI Services (Required for Agentic Functions)
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
QWEN_API_KEY=your_qwen_api_key

# Casdoor Authentication (Optional)
CASDOOR_ENDPOINT=https://your-casdoor-instance.com
CASDOOR_CLIENT_ID=your_client_id
CASDOOR_CLIENT_SECRET=your_client_secret
CASDOOR_JWT_PUBLIC_KEY=your_jwt_public_key
CASDOOR_ORGANIZATION_NAME=your_org
CASDOOR_APPLICATION_NAME=your_app

# Backup Configuration
BACKUP_PATH=/backups
BACKUP_RETENTION_DAYS=30

# Security Settings
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=900 # 15 minutes in seconds
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=30000 # 30 seconds in ms
HEALTH_CHECK_TIMEOUT=5000 # 5 seconds in ms

# File Upload Limits
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.pdf,.doc,.docx,.xls,.xlsx
UPLOAD_PATH=./uploads